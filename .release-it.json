{
  "git": {
    "requireCleanWorkingDir": false,
    "changelog": "auto-changelog --stdout",
    "tagName": "v${version}"
  },
  "github": {
    "release": true,
    "releaseName": "v${version}",
    "assets": ["__builds__/*.zip"]
  },
  "npm": {
    "publish": false,
    "ignoreVersion": true
  },
  "hooks": {
    "before:init": [
      "chmod +x .github/scripts/*",
      ".github/scripts/pre_check.sh"
    ],
    "after:git:release": ".github/scripts/create_asset.sh"
  },
  "plugins": {
    "@release-it/bumper": {
      "in": {
        "file": "VERSION"
      },
      "out": {
        "file": "VERSION"
      }
    }
  }
}
